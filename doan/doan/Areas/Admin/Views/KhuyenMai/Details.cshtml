


@{
    ViewBag.Title = "Bloomsy";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model Model.EF.KhuyenMai

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

@section breadcrumb {
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-0 ms-2">
                <li class="breadcrumb-item">
                    <!-- if breadcrumb is single-->
                    <span>Khuyến Mãi</span>
                </li>
                <li class="breadcrumb-item active"><span>Chi Tiết Khuyến Mãi</span></li>
            </ol>
        </nav>
    </div>
}


<script src="~/Scripts/ckfinder/ckfinder.js"></script>
<script src="~/Scripts/ckeditor/ckeditor.js"></script>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()
<div class="w3-services py-5">
    <div class="container py-lg-4">
        <div class="form-horizontal">
            <div class="container">
                <form>
                    <div class="profile-header">
                        <div class="profile-header-left">
                            <div>
                                <h3 style="font-weight: 700; font-size: 40px; line-height: 49px;">Thông Tin Khuyến Mãi</h3>
                                <p style="font-weight: 400; font-size: 18px; line-height: 22px;">Xem thông tin của Khuyến Mãi.</p>
                            </div>
                        </div>
                    </div>
                    <div class="form-detail" style="margin-top: 80px; margin-bottom:60px;">

                        <div class="form-group row">
                            <label for="hoTenLabel" class="col-sm-2 col-form-label col-form-label-lg">Tên Khuyến Mãi</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control form-control-lg" id="hoTenLabel" value="@Model.TenKM" name="HoTen" readonly>
                            </div>
                        </div>
                        <hr class="style10">
                        <div class="form-group row">
                            <label for="phoneLabel" class="col-sm-2 col-form-label col-form-label-lg">Phần Trăm Khuyến Mãi</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control form-control-lg" id="phoneLabel" value="@Model.PhanTramKM" name="SDT" readonly>
                            </div>
                        </div>
                        <hr class="style10">
                        <div class="form-group row">
                            <label for="birthLabel" class="col-sm-2 col-form-label col-form-label-lg">Ngày Bắt Đầu</label>
                            <div class="col-sm-10">
                                <input type="date" class="form-control form-control-lg" id="birthLabel" name="NgSinh" value="@string.Format("{0:yyyy-MM-dd}", Model.NgayBatDau)" readonly />
                            </div>
                        </div>
                        <hr class="style10">
                        <div class="form-group row">
                            <label for="birthLabel" class="col-sm-2 col-form-label col-form-label-lg">Ngày Kết Thúc</label>
                            <div class="col-sm-10">
                                <input type="date" class="form-control form-control-lg" id="birthLabel" name="NgSinh" value="@string.Format("{0:yyyy-MM-dd}", Model.NgayKetThuc)" readonly />
                            </div>
                        </div>
                        <hr class="style10">
                        <div class="form-group row">
                            <label for="genderLabel" class="col-sm-2 col-form-label col-form-label-lg">Trạng Thái</label>
                            <div class="col-sm-10">
                                @Html.RadioButtonFor(model => model.Status, true, new { @readonly = "readonly" })
                                <label class="form-check-label" for="inlineRadio1">Đang áp dụng</label>

                                @Html.RadioButtonFor(model => model.Status, false, new { @readonly = "readonly" })
                                <label class="form-check-label" for="inlineRadio2">Không áp dụng</label>
                            </div>
                        </div>
                    </div>
                </form>
                <div style="display: flex; justify-content: flex-end; align-items: center; margin-top: 32px; text-decoration: none; padding-right:12px;">
                    <a href="~/admin/khuyen-mai" style="font-weight: 500; font-size: 16px; line-height: 20px; color: #E7596D; text-decoration:none;">
                        Danh Sách Khuyến Mãi
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
}

